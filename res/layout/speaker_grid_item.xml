
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout1"
     	android:layout_width="match_parent"
  		android:layout_height="match_parent"
        android:orientation="vertical" android:layout_gravity="center_horizontal|center" android:paddingBottom="5dp" android:paddingTop="5dp">

        <ImageView
            android:id="@+id/speaker_grid_thumbnail"
            android:layout_width="220dp"
  		  	android:layout_height="165dp"
            android:src="@android:drawable/alert_dark_frame" android:layout_gravity="center"/>

        <TextView
            android:id="@+id/speaker_grid_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name" android:layout_gravity="center" android:lines="1" android:maxLines="1"/>

    </LinearLayout>
