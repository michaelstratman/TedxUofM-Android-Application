<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <TextView 
    	android:id="@+id/notesTitle"
    	android:text="Notes"
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent" android:textColor="@color/ted_white" android:gravity="center" android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:orientation="vertical" android:background="@color/ted_red">
    </LinearLayout>
    
    <ListView
    	android:id="@id/android:list"
    
    	android:layout_width="match_parent"
       	android:layout_height="fill_parent" android:divider="@color/ted_red" android:dividerHeight="2px" android:padding="5dp"   
    />

</LinearLayout>